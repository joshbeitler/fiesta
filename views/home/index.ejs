<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h2>Attending</h2>
    </div>
  </div>
  
  <div class="row events">
    <div class="col-sm-12">
      <% for (var i = 0; i < events.length; i++) { %>
        <div class="col-sm-3 event-box">
          <div class="header" style="background-image: url('<%= events[i].headerImg %>')"></div>
          <div class="body">
            <h3><a href="/event/<%= events[i].id %>" title=""><%= events[i].name %></a></h3>
            <%= moment(events[i].startDate).format('MMMM D') %> - <%= moment(events[i].endDate).format('MMMM D') %><br>
            <%= events[i].location.toString() %>
          </div>
        </div>
      <% } %>
    </div>
  </div>

